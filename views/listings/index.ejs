    <div class="container mt-4">
        <div class="row g-4">
            <% for (data of allData) { %>
                <div class="col-12 col-sm-6 col-md-4 col-lg-4 -flex align-items-stretch">
                    <div class="card h-100 border-0">
                        <a href="/listings/<%=data._id%>" class="d-block">
                            <img src="<%=data.image.url%>" class="card-img-top" alt="<%=data.title%>" style="height:14rem; object-fit: cover; border-radius: 0.5rem;">
                        </a>
                        <div class="card-body d-flex flex-column">
                            <a href="/listings/<%=data._id%>" class="text-decoration-none text-dark flex-grow-1">
                                <p class="card-text mb-1 fw-bold"><%=data.title %></p>
                                <p class="card-text mb-0">â‚¹<%=data.price.toLocaleString('en-IN')%>/night 
                                <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>
                                </p>
                            </a>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
    <div class="row mt-5 mb-5"></div>



    <script>
        let toggle = true;
        let taxSwitch = document.getElementById('flexSwitchCheckDefault')
        taxSwitch.addEventListener('click',()=>{
            let taxInfo = document.getElementsByClassName("tax-info");
            for(info of taxInfo){
                if(info.style.display !== 'inline'){
                    info.style.display = 'inline';
                }
                else{
                        info.style.display = 'none';
                }
            }    
        })
    </script>
